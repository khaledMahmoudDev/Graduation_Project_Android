<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.Signup"
        android:layout_margin="16dp"

android:gravity="center">


    <EditText
            android:id="@+id/et_first_name"
            style="@style/viewCustom"
            android:ems="10"
            android:hint="@string/user_name"
            android:inputType="textPersonName" />

    <EditText
            android:id="@+id/editEmail1"
            style="@style/viewCustom"
            android:ems="10"
            android:layout_below="@id/et_first_name"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />
    <EditText
            android:id="@+id/EditPassword1"
            style="@style/viewCustom"
            android:layout_below="@id/editEmail1"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword" />
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/account_24dp"
            android:id="@+id/accountImage"
            android:layout_below="@id/EditPassword1"

            android:layout_centerHorizontal="true"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/pick_an_image"
              android:layout_below="@id/accountImage"
              android:id="@+id/imagetext"
              android:layout_centerHorizontal="true"
    />

    <Button
            android:id="@+id/btn_register"
            style="@style/viewCustom"
            android:layout_below="@id/imagetext"
            android:background="@color/colorAccent"
            android:text="@string/create_act"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="invisible"
            android:layout_below="@id/btn_register"
    android:layout_centerHorizontal="true"
    />

</RelativeLayout>