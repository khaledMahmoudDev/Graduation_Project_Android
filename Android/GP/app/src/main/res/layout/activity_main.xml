<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainPac.MainActivity"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="@drawable/main_entryyy"
        >
    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
    android:layout_weight="2"

    >

    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"

    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
        >
            <Button
                    android:background="@drawable/calendar"
                    android:id="@+id/mainCalender"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="50dp"
            />
            <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calender"
                    android:layout_below="@id/mainCalender"
            />
            <Button
                    android:background="@drawable/envelope"
                    android:id="@+id/mainSendMail"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@id/mainCalender"
                   />
            <TextView

                    android:layout_toRightOf="@id/mainCalender"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Email"
                    android:layout_below="@id/mainSendMail"
            />

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"

    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
        >
            <Button
                    android:background="@drawable/clipboard"
                    android:id="@+id/mainNote"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="50dp"
            />
            <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Note"
                    android:layout_below="@id/mainNote"
            />
            <Button
                    android:background="@drawable/delivery"
                    android:id="@+id/mainToDo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
            android:layout_toRightOf="@id/mainNote"/>
            <TextView

                    android:layout_toRightOf="@id/mainNote"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  ToDo"
                    android:layout_below="@id/mainToDo"
            />
        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"

    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
        >
            <Button
                    android:background="@drawable/logout"
                    android:id="@+id/logOutNow"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="50dp"
            />
            <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:layout_below="@id/logOutNow"
            />
            <Button
                    android:background="@drawable/boy"
                    android:id="@+id/profileNow"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toRightOf="@id/logOutNow"
            />
            <TextView

                    android:layout_toRightOf="@id/logOutNow"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Profile"
                    android:layout_below="@id/profileNow"
            />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>